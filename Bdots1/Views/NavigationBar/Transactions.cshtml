@model IEnumerable<Bdots1.Payment>
@{
    ViewBag.Title = "Transactions";
}

<h2>My transactions</h2>

<div class="row">
    <div class="col-md-3">
        <p>Date</p>
    </div>

    <div class="col-md-3">
        <p>Payer</p>
    </div>

    <div class="col-md-3">
        <p>Receiver</p>
    </div>

    <div class="col-md-3">
        <p>Payment Sum</p>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-3">
            @item.paymentDatetime
       </div>

        <div class="col-md-3">
            @item.Payers.username
        </div>

        <div class="col-md-3">
            @item.Receivers.username
        </div>

        <div class="col-md-3">
            @item.paymentSum
        </div>
    </div>
}